<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :auto_signout, "This is a Crisis Clinic computer" %>
      <%= f.check_box :auto_signout, checked: true %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
      <%= f.submit "Reset password", class: "btn btn-large"  %>
    <% end %>
  </div>
</div>