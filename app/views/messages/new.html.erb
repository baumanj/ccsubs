<% provide(:title, 'New message') %>
<h1>Send a message to all users</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag({action: :deliver}) do %>
      <%= render 'shared/error_messages' %>

      <%= label_tag :subject %>
      <%= text_field_tag :subject %>

      <%= label_tag :body %>
      <%= text_area_tag :body %>

      <%= submit_tag "Send", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
