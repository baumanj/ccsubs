<% provide(:title, 'New request') %>
<h1>New Request</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@request) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :start, "date (MM/DD/YYYY)" %>
      <%= f.date_field :start %>
      <%= f.label :shift, "time" %>
      <%= f.select :shift, Request::SHIFTS, { prompt: 'Select shift'} %>

      <%= f.label :text, "details" %>
      <%= f.text_area :text %>

      <%= f.submit "Create my request", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

