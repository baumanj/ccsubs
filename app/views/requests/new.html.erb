<% provide(:title, 'New request') %>
<h1>New Request</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@request) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :start, "Shift time" %>
      <%= f.date_field :start %>
      <%= f.select :shift, Request::SHIFTS, { prompt: 'Select shift'} %>

      <%= f.text_area :text %>

      <%= f.submit "Create my request", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

