<%= render 'availabilities/instructions' %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= render 'shared/error_messages' %>

    <%= form_for(@request.user, url: update_availability_path(@request.user)) do |f| %>
      <%= hidden_field_tag :redirect_to, request_path(@request) %>
      <%= f.fields_for :requests, @request do |request_fields| %>
        <%= request_fields.hidden_field :user_id %>
        <%= request_fields.hidden_field :date %>
        <%= request_fields.hidden_field :shift %>
      <% end %>

      <%= render partial: 'availabilities/suggested',
                 locals: {f: f, availabilities: @suggested_availabilities} %>
      <%= f.submit "Update", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>
