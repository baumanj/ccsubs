<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@request) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= render partial: 'shared/shift_time', locals: {f: f} %>

      <%= f.label :text, "details" %>
      <%= f.text_area :text %>

      <%= f.submit yield(:submit_text), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
