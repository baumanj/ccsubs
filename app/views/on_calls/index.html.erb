<% provide(:title, 'On-call Schedule') %>

<%= render partial: 'month_header',
           locals: { label: 'on-call schedule', date: @date_range.first, path_func: :on_call_path } %>

<%= render layout: 'month' do |date| %>
  <ol>
  <% @on_calls_for_date[date].each do |oc| %>
    <li><%= link_to_if oc.user, oc.user, oc.user %></li>
  <% end %>
  </ol>
<% end %>
