
<table class="month">
  <tr>
    <% Date::DAYNAMES.rotate(1).each do |d| %>
      <th class="col-md-1"><%= d %></th>
    <% end %>
  </tr>
  <% date = @date_range.first - (@date_range.first.cwday - 1) %>
  <% @date_range.map(&:cweek).uniq.each do %>
    <tr>
      <% 7.times do %>
        <td class="day">
          <% if @date_range.include?(date) %>
            <span class="day-number"><%= date.day %></span>
            <%= yield date %>
          <% end %>
        </td>
        <% date += 1 %>
      <% end %>
    </tr>
  <% end %>
</table>
