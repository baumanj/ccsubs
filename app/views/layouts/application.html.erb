<!DOCTYPE html>
<html>
<head>
  <title>CC Subs | <%= yield(:title) %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  <%= csrf_meta_tags %>
</head>
<body>
    <%= render 'layouts/header' %>
    <div class="container">
      <% if signed_in? && !current_user.confirmed? %>
        <div class="alert alert-warning">
          <%= link_to "Please confirm your email address",
              send_confirmation_path(current_user) %>
        </div>
      <% end %>
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= flash_class(key) %>"><%= value %></div>
      <% end %>
      <%= yield %>
      <%= render 'layouts/footer' %>
      <%= debug(current_user) if Rails.env.development? %>
      <%= debug(params) if Rails.env.development? %>
    </div>
</body>
</html>
