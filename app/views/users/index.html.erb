<% provide(:title, 'All users') %>

<p><%= link_to "Create new user", new_user_path %></p>
<p><%= link_to "Upload new user list", new_user_list_path %></p>

<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= image_tag user.gravatar_url(size: 25, d: :identicon) %>
      <%= link_to user, user %>
      <%= "ADMIN" if user.admin?%>
      <%= "âœ¨" if user.created_at > 1.day.ago %>
    </li>
  <% end %>
</ul>
